{
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.formatOnSaveMode": "file",
    "editor.codeActionsOnSave": {
        "source.organizeImports": true
    }
  },
  "black-formatter.args": [
    "--line-length=120",
    "--target-version=py312"
  ],
  "isort.args": [
    "--profile=black"
  ]
}
